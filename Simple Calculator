#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    char ch;
    do{
        float num1,num2;
        int mod;
        //cout << fabs(-4.56);
        char op;
        cout << "Enter the symbol:";
        cin >> op;
        switch (op){
            case '+':
            {
                cout <<"Enter 1st value:";
                cin >>num1;
                cout <<"Enter 2nd value:";
                cin >> num2;
                cout << num1 << " " << op << " " <<num2 << " = " << num1+num2;
                break;
            }
            case '-':
            {
                cout <<"Enter 1st value:";
                cin >>num1;
                cout <<"Enter 2nd value:";
                cin >> num2;
                cout << num1 << " " << op << " " <<num2 << " = " << num1-num2;
                break;
            }
            case '*':
            {
                cout <<"Enter 1st value:";
                cin >>num1;
                cout <<"Enter 2nd value:";
                cin >> num2;
                cout << num1 << " " << op << " " <<num2 << " = " << num1*num2;
                break;
            }
            case '/':
            {
                cout <<"Enter 1st value:";
                cin >>num1;
                cout <<"Enter 2nd value:";
                cin >> num2;
                
                if (num2==0){
                    cout << "Division by Zero Error";
                    break;
                }
                else{
                    cout << num1 << " " << op << " " << num2 << " = " << num1/num2;
                    break;
                }
            }
            case '%':
            {
                cout <<"Enter 1st value:";
                cin >>num1;
                cout <<"Enter 2nd value:";
                cin >> num2;
                
                if (num2==0){
                    cout << "Division by Zero Error";
                    break;
                }
                else{
                    mod=(int)num1 % (int)num2;
                    cout << num1 << " " << op << " " <<num2 << " = " << mod;
                    break;
                }
            }
            case '^':
            {
                cout <<"Enter 1st value:";
                cin >>num1;
                cout <<"Enter 2nd value:";
                cin >> num2;
                cout << num1 << " " << op << " " <<num2 << " = " << pow(num1,num2);
                break;
            }
            case 'S':
            {
                cout <<"Enter 1st value:";
                cin >>num1;
                cout <<"Enter 2nd value:";
                cin >> num2;
                cout << "Square Root of " << num1 << "=" << sqrt(num1) << endl;
                cout << "Square Root of " << num2 << "=" << sqrt(num2);
                break;
            }
            default:
            {
                cout << "Invalid";
                break;
            }
        }
        cout << "\nDo you want to continue:";
        cin >> ch ;
        cout <<"\n";
    }
    while(ch == 'y' || ch == 'Y');
    cout << "Simple Calculator Exited....";

    return 0;
}

